<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bojannovakovic.retrofitexample.MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/usernameGet"
        android:text="GET USERNAME"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/buddyGet"
        android:text="GET Buddy"
        />

    <TextView
        android:id="@+id/txYourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txBuddyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
